# http://editorconfig.org

[*]
# Set default charset
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# 4 space indentation for py
[*.py]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
